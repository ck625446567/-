/* pages/WaitTaskModule/Merchant/StoreMatch/StoreMatch.wxss */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.scrollView {
  display: flex;
  flex: 1;
  background: #fff;
}
.contentTitle {
  padding: 16rpx 0;
}
.tip {
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 34rpx;
  color: #4A4A4A;
  font-weight: 500;
}
.lineLeft {
  width: 4rpx;
  height: 44rpx;
  margin-right: 36rpx;
  background: #FFE817;
}
.tip-desc {
  margin-top: 16rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color:rgba(155,155,155,1);
}
.cellBody {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-top: 2rpx solid #f8f8f8;
}

.left {
  padding-left: 40rpx;
}
.contact {
  font-size: 28rpx;
  color: #4A4A4A;
}
.storeName {
  margin-top: 10rpx;
  font-size: 24rpx;
  color:rgba(155,155,155,1);
}

.right {
  margin-right: 64rpx;
}
.right image {
  width: 34rpx;
  height: 34rpx;
}

/* 横向布局多个按钮。且底部有阴影 */
.rowButtons {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  border-top-style: solid;
  border-top-width: 1rpx;
  border-top-color: #f6f6f6;
  height: 114rpx;
}
.emptyText {
  display: block;
  text-align: center;
  color: #4a4a4a;
  font-size: 32rpx;
  margin-top: 120rpx;
}