/* pages/WaitTaskModule/Merchant/Detail/Detail.wxss */

page {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  height: 100%;
}

/* 顶部意向商户信息容器 */

.merchantContainer {
  background-color: #f6f6f6;
}

/* 商户类型 */

.merchantBody {
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  background-color: white;
  overflow: hidden;
  box-shadow:0 2px 4px 0 #e5e5e5;
  font-size: 0;
}

.merchantTypeBadgeBody {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background-color: #50e3c2;
  border-bottom-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  height: 32rpx;
}

.merchantTypeBadgeText {
  color: white;
  font-size: 20rpx;
  margin: 4rpx 6rpx;
}

.merchantTypeBody {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  background-color: #f9f9f9;
}

.merchantTypeTitle {
  color: #4a4a4a;
  font-size: 24rpx;
}

.merchantTypeValue {
  color: black;
  font-size: 28rpx;
}

.pictureContainer {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 40rpx;
  background-color: white;
}

.newVisitBody {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 70rpx;
}

.newVisitImage {
  width: 36rpx;
  height: 36rpx;
}

.newVisitText {
  margin-left: 24rpx;
  color: black;
  font-size: 28rpx;
}

/* 优化 */
.baseInfo {
  display: flex;
  width: 690rpx;
  min-height: 216rpx;
  margin: 20rpx auto 28rpx;
  background: #fff;
  border-radius:16rpx;
}
.left {
  flex: 1;
}
.typeName {
  line-height: 20rpx;
}
.typeName text {
  display: inline-block;
  padding: 8rpx 16rpx;
  height: 20rpx;
  color: #fff;
  border-bottom-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  font-size: 20rpx;
}
.contact {
  padding-left: 20rpx;
  font-size: 32rpx;
  color:rgba(74,74,74,1);
  font-weight: 600;
}
.telephone {
  margin-left: 28rpx;
  font-size: 28rpx;
  font-weight:400;
  color:rgba(74,74,74,1);
}
.phone {
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
  vertical-align: center;
}
.address {
  padding-left: 20rpx;
  margin-top: 26rpx;
  color: #4A4A4A;
  font-size: 28rpx;
}
.storeNo {
  padding-left: 20rpx;
  margin-bottom: 28rpx;
  margin-top: 20rpx;
  color: #9B9B9B;
  font-size: 24rpx;
}
.right {
  width: 180rpx;
}
.toSelectStore {
  width: 160rpx;
  height: 60rpx;
  margin-right: 20rpx;
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #000000;
  background: rgb(255, 237, 76);
  border-radius: 16rpx;
}