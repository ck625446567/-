/* pages/WaitTaskModule/MerchantFetch/MerchantFetch.wxss */

page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background-color: #f6f6f6;
}

.shadowTop {
  border-top-style: solid;
  border-top-width: 1rpx;
  border-top-color: #f6f6f6;
}

.titleTips {
  height: 80rpx; 
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #9B9B9B;
  background: #fff;
}

.cell {
  padding: 24rpx 40rpx;
  border-top: 2rpx solid #f8f8f8;
}
.contactName {
  font-size: 28rpx;
  color: #4A4A4A;
}
.contactType {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 36rpx;
  border-radius: 22rpx;
  margin-left: 20rpx;
  color: #fff;
  font-size: 20rpx;
}
.storeName {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}